[default]
bears = InvalidLinkBear, FilenameBear, coalaBear
files = **.yml, **.js, **.css, **.html, **.md, **.json
file_naming_convention = camel
ignore =
[yaml]
bears = YAMLLintBear, LineLengthBear
files = **.yml
[json]
bears = JSONFormatBear, LineLengthBear
files = **.json
[css]
bears = CSSLintBear
files = **.css
[markdown]
bears = LineLengthBear, MarkdownBear
files = **.md
[html]
bears = BootLintBear, LineLengthBear, HTMLLintBear
files = **.html
[javascript]
bears = JSComplexityBear, JSHintBear
files = **.js
ignore = js/jquery.colorPicker.min.js
allow_last_semicolon = true
allow_missing_semicolon = true
force_braces = false
javascript_strictness = false
