[default]
bears = InvalidLinkBear, FilenameBear, coalaBear
files = **.yml, **.js, **.css, **.html, **.md, **.json
file_naming_convention = camel
ignore =
[yaml]
bears = YAMLLintBear
files = **.yml
[json]
bears = JSONFormatBear
files = **.json
indent_size = 2
[css]
bears = CSSLintBear
files = **.css
[markdown]
bears = MarkdownBear
files = **.md
[html]
bears = BootLintBear, HTMLLintBear
files = **.html
[javascript]
bears = JSComplexityBear, JSHintBear
files = **.js
ignore = js/jquery.colorPicker.min.js
allow_last_semicolon = true
allow_missing_semicolon = true
force_braces = false
javascript_strictness = false
