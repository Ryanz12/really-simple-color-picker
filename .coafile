[default]
bears = InvalidLinkBear, FilenameBear, coalaBear
files = **.yml, **.js, **.css, **.html, **.md, **.json
file_naming_convention = camel
ignore =
[yaml]
bears = YAMLLintBear
files = **.yml
[json]
bears = JSONFormatBear
files = **.json
indent_size = 2
[css]
bears = CSSLintBear
files = **.css
[markdown]
bears = MarkdownBear
files = **.md
[html]
bears = BootLintBear, HTMLLintBear
files = **.html
htmllint_ignore = doctype, trailing_whitespace,
tabs, void_element, optional_tag, extra_whitespace,
protocol, charset, type_attribute, invalid_attribute,
concerns_separation, http_equiv
[javascript]
bears = JSComplexityBear, JSHintBear
files = **.js
ignore = js/jquery.colorPicker.min.js
allow_last_semicolon = true
allow_missing_semicolon = true
force_braces = false
javascript_strictness = false
allow_assignment_comparisions = true
allow_unused_variables = true
environment_jquery = true
